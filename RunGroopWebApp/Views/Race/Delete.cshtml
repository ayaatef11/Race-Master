
@model Race

<h1>Are you sure you want to delete this race?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="form-group">
        <label asp-for="Name">Title</label>
        <input asp-for="Name" class="form-control" placeholder="Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type">Description</label>
        <input asp-for="Type" class="form-control" placeholder="Description">
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RaceCategory">Club Category</label>
        <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="RaceCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location.Street">Street</label>
        <input asp-for="Location.Street" class="form-control" placeholder="Street">
        <span asp-validation-for="Location.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location.City">City</label>
        <input asp-for="Location.City" class="form-control" placeholder="City">
        <span asp-validation-for="Location.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location.State">State</label>
        <input asp-for="Location.State" class="form-control" placeholder="Street">
        <span asp-validation-for="Location.State" class="text-danger"></span>
    </div>
