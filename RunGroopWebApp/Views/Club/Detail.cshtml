@model RunGroop.Data.Models.Data.Club

@{
    ViewData["Title"] = "Club Details";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-6">
                <img src="~/uploads/@Model.Image" class="img-fluid rounded" alt="@Model.Title" />
            </div>
            <div class="col-md-6">
                <h2>@Model.Title</h2>
                <p class="text-muted">@Model.ClubCategory</p>
                <p>@Model.Description</p>

                <h5>Location:</h5>
                @if (Model.Address != null)
                {
                    <p>
                        @Model.Address.Street, @Model.Address.City, @Model.Address.State
                    </p>
                }

                <h5>Organizer:</h5>
                @if (Model.AppUser != null)
                {
                    <p>@Model.AppUser.UserName</p>
                }

                <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
            </div>
        </div>
    </div>
</div>
